{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Mcp.Net.Server.Transport": "Information",
      "Mcp.Net.Server.McpServer": "Information"
    },
    "Options": {
      "LogFilePath": "logs/mcp-server.log",
      "NoConsoleOutput": false,
      "PrettyConsoleOutput": true,
      "FileRollingInterval": "Day",
      "FileSizeLimitBytes": 10485760,
      "RetainedFileCountLimit": 31,
      "CategoryLogLevels": {
        "Mcp.Net.Server.Transport": "Information",
        "Mcp.Net.Server.McpServer": "Information",
        "Mcp.Net.Server.ServerBuilder": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "Server": {
    "Hostname": "0.0.0.0",
    "Port": 5000,
    "Cors": {
      "Origins": ["*"],
      "Methods": ["GET", "POST"],
      "Headers": ["Content-Type"]
    }
  }
}